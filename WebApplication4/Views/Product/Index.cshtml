@model ProductListViewModel

<!DOCTYPE html>

<html>

<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    <hr />
    <h1 style="margin-left:42%">We have @Model.Products.Count() products</h1>
    <a asp-action="Add" asp-controller="Product">
        <button style="width:200px; height:80px; display:block; background-color:darkred; margin:auto; margin-left:46%; margin-top:30px; font-size:20px"  class="btn btn-primary"  type="button">Add</button>
    </a>
    @foreach (var item in Model.Products)
    {
        <div class="container" style="margin:10px; margin-left:60px; margin-top:60px; border-radius:10px; width:600px; display:inline-block;" >
            <img src="@item.ImagePath" style="width:400px; height:400px; display:inline-block; margin-left:60px" />
            <div style="display:inline-block; margin-top:20px; margin-left:20px">
               
                <h1>Name : @item.Name</h1>
                <h1>Description : @item.Description</h1>
                <h1>Discount : <b> @item.Discount </b></h1>
                <h1>Price : <b> @item.Price </b></h1>
            </div>
            <div style="display:inline-block;">
                <a asp-action="Update" asp-controller="Product" asp-route-myid="@item.Id">
                    <button style="width:110px; height:60px; margin:20px; margin-bottom:40px; background:palegreen;  font-size:20px" class="btn btn-primary" type="button">Update</button>
                </a>
                
            </div>
            <div style="display:inline-block;">
                <a asp-action="Delete" asp-controller="Product" asp-route-myid="@item.Id">
                    <button style="width:110px; height:60px; margin:20px; margin-bottom:40px; background:red; font-size:20px" class="btn btn-primary" type="button">Delete</button>
                </a>
            </div>
        </div>
    }
</body>
</html>